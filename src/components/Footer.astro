<style>
  .footer {
    background-color: var(--color-background);
    color: var(--color-text-light);
    padding: 5rem 0 2rem;
    position: relative;
    overflow: hidden;
    border-top: 1px solid rgba(255, 87, 34, 0.2);
  }

  .footer-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background:
      linear-gradient(135deg, rgba(26, 26, 46, 0.95) 0%, rgba(22, 33, 62, 0.95) 100%),
      url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%239C92AC' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    z-index: 0;
  }

  .footer-decoration {
    position: absolute;
    border-radius: 50%;
    filter: blur(50px);
    opacity: 0.15;
    z-index: 0;
  }

  .footer-decoration-1 {
    width: 300px;
    height: 300px;
    background-color: var(--color-primary);
    top: -100px;
    right: -100px;
  }

  .footer-decoration-2 {
    width: 200px;
    height: 200px;
    background-color: var(--color-tertiary);
    bottom: -50px;
    left: -50px;
  }

  .footer-decoration-3 {
    width: 150px;
    height: 150px;
    background-color: var(--color-secondary);
    top: 50%;
    left: 30%;
  }

  .footer-logo {
    text-align: center;
    margin-bottom: 3rem;
    position: relative;
    z-index: 1;
  }

  .logo-container {
    display: inline-block;
    padding: 0.5rem 2rem;
    margin-bottom: 0.5rem;
  }

  .footer-logo h3 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  .footer-tagline {
    font-size: 1.2rem;
    color: var(--color-text-light);
    font-style: italic;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 3rem;
    margin-bottom: 3rem;
    position: relative;
    z-index: 1;
  }

  .footer-info {
    display: flex;
    flex-direction: column;
  }

  .game-stats {
    display: flex;
    gap: 1.5rem;
    margin-top: 1.5rem;
    padding: 1rem;
    background-color: rgba(255, 255, 255, 0.05);
    border-radius: var(--border-radius);
    border: 1px solid rgba(255, 87, 34, 0.2);
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
  }

  .stat-number {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: 0.25rem;
  }

  .stat-label {
    font-size: 0.8rem;
    color: var(--color-text-light);
    text-align: center;
  }

  .footer-nav {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }

  .footer h4 {
    font-size: 1.3rem;
    margin-bottom: 1.5rem;
    color: var(--color-white);
    position: relative;
    display: inline-block;
  }

  .footer h4::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 40px;
    height: 3px;
    background: linear-gradient(90deg, var(--color-primary), var(--color-secondary));
    border-radius: 2px;
  }

  .footer h5 {
    font-size: 1.1rem;
    margin-bottom: 1rem;
    color: var(--color-white);
  }

  .footer p {
    margin-bottom: 1.5rem;
    color: var(--color-text-light);
    line-height: 1.6;
  }

  .footer ul {
    list-style: none;
    padding: 0;
  }

  .footer ul li {
    margin-bottom: 0.75rem;
  }

  .footer-link {
    display: flex;
    align-items: center;
    color: var(--color-text-light);
    transition: all var(--transition-medium) ease;
    padding: 0.5rem 0;
  }

  .link-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    margin-right: 0.75rem;
    color: var(--color-primary);
    font-size: 0.9rem;
  }

  .footer-link:hover {
    color: var(--color-secondary);
    transform: translateX(5px);
  }

  .social-icons {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 45px;
    height: 45px;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: var(--color-text-light);
    transition: all var(--transition-medium) ease;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }

  .social-icon:hover {
    transform: translateY(-5px);
    color: var(--color-white);
    box-shadow: var(--neon-glow);
    border-color: var(--color-primary);
  }

  .newsletter {
    margin-top: 2rem;
    padding: 1.5rem;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.02));
    border-radius: var(--border-radius);
    border: 1px solid rgba(255, 87, 34, 0.2);
  }

  .newsletter-form {
    display: flex;
    gap: 0.5rem;
  }

  .newsletter-form input {
    flex: 1;
    padding: 0.75rem 1rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--border-radius-sm);
    background-color: rgba(255, 255, 255, 0.05);
    color: var(--color-white);
  }

  .btn-sm {
    padding: 0.75rem 1rem;
    font-size: 0.9rem;
  }

  .footer-bottom {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .footer-divider {
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg,
      transparent 0%,
      rgba(255, 87, 34, 0.3) 20%,
      rgba(255, 87, 34, 0.3) 80%,
      transparent 100%);
    margin-bottom: 2rem;
  }

  .footer-copyright {
    text-align: center;
    margin-bottom: 1.5rem;
  }

  .footer-copyright p {
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
    color: rgba(255, 255, 255, 0.5);
  }

  .footer-back-to-top {
    margin-top: 1rem;
  }

  .back-to-top {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background-color: rgba(255, 255, 255, 0.05);
    border-radius: 50px;
    color: var(--color-text-light);
    transition: all var(--transition-medium) ease;
  }

  .back-to-top:hover {
    background-color: var(--color-primary);
    color: var(--color-white);
    transform: translateY(-5px);
  }

  @media (max-width: 1200px) {
    .footer-content {
      grid-template-columns: 1fr 1fr;
    }

    .footer-social {
      grid-column: span 2;
    }
  }

  @media (max-width: 992px) {
    .footer {
      padding: 4rem 0 2rem;
    }

    .footer-logo h3 {
      font-size: 2rem;
    }
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-social {
      grid-column: span 1;
    }

    .footer-nav {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .game-stats {
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }

    .stat {
      width: 100%;
      flex-direction: row;
      justify-content: space-between;
      padding: 0 1rem;
    }
  }

  @media (max-width: 576px) {
    .footer {
      padding: 3rem 0 2rem;
    }

    .footer-logo h3 {
      font-size: 1.8rem;
    }

    .social-icons {
      flex-wrap: wrap;
      justify-content: center;
    }

    .newsletter-form {
      flex-direction: column;
    }

    .btn-sm {
      width: 100%;
    }
  }
</style>
