---
import logo from '../assets/images/logo.png';
---

<header class="header">
  <div class="header-bg"></div>
  <div class="container">
    <div class="header-content">
      <a href="/" class="logo">
        <img src={logo.src} alt="Cheese Chompers 3D Logo" width="200" height="60" class="floating" />
      </a>
      <nav class="nav">
        <ul class="nav-list">
          <li class="nav-item"><a href="#game" class="nav-link nav-link-play">Play Now</a></li>
          <li class="nav-item"><a href="#features" class="nav-link">Features</a></li>
          <li class="nav-item"><a href="#how-to-play" class="nav-link">How to Play</a></li>
          <li class="nav-item"><a href="#tips" class="nav-link">Tips</a></li>
          <li class="nav-item"><a href="#faq" class="nav-link">FAQ</a></li>
        </ul>
      </nav>
      <button class="mobile-menu-btn" aria-label="Toggle menu">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
      </button>
    </div>
  </div>
</header>

<style>
  .header {
    background-color: rgba(26, 26, 46, 0.9);
    backdrop-filter: blur(10px);
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.3);
    position: sticky;
    top: 0;
    z-index: 100;
    padding: 1rem 0;
    border-bottom: 1px solid rgba(255, 87, 34, 0.2);
  }

  .header-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, rgba(255, 87, 34, 0.05), rgba(140, 82, 255, 0.05));
    background-size: 200% 100%;
    animation: gradientBG 15s ease infinite;
    z-index: -1;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: block;
    transition: transform var(--transition-medium) ease;
  }

  .logo:hover {
    transform: scale(1.05);
  }

  .logo img {
    max-height: 60px;
    width: auto;
    filter: drop-shadow(0 0 8px rgba(255, 87, 34, 0.5));
  }

  .nav-list {
    display: flex;
    list-style: none;
    gap: 2rem;
  }

  .nav-item {
    position: relative;
  }

  .nav-link {
    color: var(--color-text);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 0.9rem;
    padding: 0.5rem 0;
    transition: all var(--transition-medium) ease;
    position: relative;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--color-primary), var(--color-secondary));
    transition: width var(--transition-medium) ease;
  }

  .nav-link:hover {
    color: var(--color-secondary);
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .nav-link-play {
    background: linear-gradient(90deg, var(--color-primary), var(--color-secondary));
    color: var(--color-white);
    padding: 0.5rem 1.5rem;
    border-radius: var(--border-radius-sm);
    box-shadow: var(--box-shadow);
    transition: all var(--transition-medium) ease;
  }

  .nav-link-play:hover {
    transform: translateY(-3px);
    box-shadow: var(--neon-glow);
    color: var(--color-white);
  }

  .nav-link-play::after {
    display: none;
  }

  .mobile-menu-btn {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    z-index: 10;
  }

  .bar {
    display: block;
    width: 25px;
    height: 3px;
    margin: 5px auto;
    background-color: var(--color-text);
    transition: all var(--transition-medium) ease;
    border-radius: 3px;
  }

  @media (max-width: 768px) {
    .nav {
      position: fixed;
      top: 80px;
      left: -100%;
      width: 100%;
      height: calc(100vh - 80px);
      background-color: rgba(26, 26, 46, 0.95);
      backdrop-filter: blur(10px);
      transition: left var(--transition-medium) ease;
      padding: 2rem;
      z-index: 99;
    }

    .nav.active {
      left: 0;
    }

    .nav-list {
      flex-direction: column;
      align-items: center;
      gap: 2rem;
    }

    .nav-link {
      font-size: 1.2rem;
    }

    .mobile-menu-btn {
      display: block;
    }

    .mobile-menu-btn.active .bar:nth-child(1) {
      transform: rotate(45deg) translate(8px, 6px);
      background-color: var(--color-primary);
    }

    .mobile-menu-btn.active .bar:nth-child(2) {
      opacity: 0;
    }

    .mobile-menu-btn.active .bar:nth-child(3) {
      transform: rotate(-45deg) translate(8px, -6px);
      background-color: var(--color-primary);
    }
  }
</style>

<script>
  // Mobile menu toggle
  const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
  const nav = document.querySelector('.nav');

  if (mobileMenuBtn && nav) {
    mobileMenuBtn.addEventListener('click', () => {
      mobileMenuBtn.classList.toggle('active');
      nav.classList.toggle('active');
    });
  }

  // Close mobile menu when clicking on a link
  const navLinks = document.querySelectorAll('.nav-link');
  navLinks.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenuBtn?.classList.remove('active');
      nav?.classList.remove('active');
    });
  });
</script>
