<script>
  // FAQ accordion functionality
  const faqQuestions = document.querySelectorAll('.faq-question');

  faqQuestions.forEach(question => {
    question.addEventListener('click', () => {
      const answer = question.nextElementSibling;
      const isActive = question.classList.contains('active');

      // Close all FAQs
      faqQuestions.forEach(q => {
        q.classList.remove('active');
        q.nextElementSibling.classList.remove('active');
      });

      // If the clicked FAQ wasn't active, open it
      if (!isActive) {
        question.classList.add('active');
        answer.classList.add('active');

        // Add animation effect
        const answerContent = answer.querySelector('.answer-content');
        if (answerContent) {
          answerContent.style.opacity = '0';
          answerContent.style.transform = 'translateY(10px)';

          setTimeout(() => {
            answerContent.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
            answerContent.style.opacity = '1';
            answerContent.style.transform = 'translateY(0)';
          }, 50);
        }

        // Scroll into view if needed
        const questionRect = question.getBoundingClientRect();
        if (questionRect.top < 100 || questionRect.bottom > window.innerHeight - 200) {
          setTimeout(() => {
            question.scrollIntoView({ behavior: 'smooth', block: 'start', inline: 'nearest' });
          }, 100);
        }
      }
    });
  });

  // Initialize animations and interactions when DOM is loaded
  window.addEventListener('DOMContentLoaded', () => {
    // Open the first FAQ by default with a slight delay
    if (faqQuestions.length > 0) {
      setTimeout(() => {
        faqQuestions[0].classList.add('active');
        faqQuestions[0].nextElementSibling.classList.add('active');

        const firstAnswerContent = faqQuestions[0].nextElementSibling.querySelector('.answer-content');
        if (firstAnswerContent) {
          firstAnswerContent.style.opacity = '0';
          firstAnswerContent.style.transform = 'translateY(10px)';

          setTimeout(() => {
            firstAnswerContent.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
            firstAnswerContent.style.opacity = '1';
            firstAnswerContent.style.transform = 'translateY(0)';
          }, 100);
        }
      }, 500);
    }

    // Add hover effects to related games
    const relatedGames = document.querySelectorAll('.related-game');
    relatedGames.forEach(game => {
      game.addEventListener('mouseenter', () => {
        // Add staggered hover effect to siblings
        const siblings = Array.from(game.parentElement.children);
        const index = siblings.indexOf(game);

        siblings.forEach((sibling, i) => {
          if (sibling !== game) {
            const distance = Math.abs(i - index);
            const delay = distance * 50;
            setTimeout(() => {
              sibling.style.transform = 'translateY(-2px)';
              sibling.style.backgroundColor = 'rgba(0, 188, 212, 0.05)';
            }, delay);
          }
        });
      });

      game.addEventListener('mouseleave', () => {
        // Reset siblings
        const siblings = Array.from(game.parentElement.children);
        siblings.forEach(sibling => {
          if (sibling !== game) {
            sibling.style.transform = '';
            sibling.style.backgroundColor = '';
          }
        });
      });
    });

    // Add animation to device compatibility items
    const devices = document.querySelectorAll('.device');
    devices.forEach((device, index) => {
      device.style.opacity = '0';
      device.style.transform = 'translateY(20px)';

      setTimeout(() => {
        device.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
        device.style.opacity = '1';
        device.style.transform = 'translateY(0)';
      }, 300 + (index * 200));
    });
  });
</script>
